# Environment Variables for WellPal Backend
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=WellPal Backend
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-change-this-in-production-make-it-long-and-random
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (Choose one)
# SQLite (for development)
DATABASE_URL=sqlite:///./wellpal.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost/wellpal

# External API Keys (for future features)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Email Settings (for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
